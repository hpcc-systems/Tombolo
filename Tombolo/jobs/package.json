    "@tombolo/core": "workspace:*",
    "@tombolo/db": "workspace:*",
    "@tombolo/shared": "workspace:*",
    "bullmq": "^5.63.2",
    "dotenv": "catalog:",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "mysql2": "catalog:"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "catalog:",
    "nodemon": "catalog:",
    "ts-node": "^10.9.2",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  }

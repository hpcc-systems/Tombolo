{
  "name": "@tombolo/jobs",
  "version": "1.0.0",
  "private": true,
  "description": "Background job processing for Tombolo",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "type": "module",
  "scripts": {

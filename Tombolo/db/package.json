{
  "name": "@tombolo/db",
  "private": true,
  "version": "0.1.0",
  "main": "models/index.js",
  "description": "Shared database models, migrations, and connection configuration for Tombolo",
  "dependencies": {
    "sequelize": "catalog:",
    "mysql2": "catalog:",
    "dotenv": "catalog:",
    "@tombolo/shared": "workspace:*"
  },
  "scripts": {
    "build": "echo 'no build step for db'",
    "db:migrate": "sequelize db:migrate",
    "db:create": "sequelize db:create",
    "db:seed": "sequelize db:seed:all",
    "db:drop": "sequelize db:drop",
    "clean": "rm -rf node_modules"
  }
}

{
  "name": "@tombolo/db",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "config",
    "utils",
    "migrations",
    "seeders"
  ],
  "description": "Shared database models, migrations, and connection configuration for Tombolo",
  "dependencies": {
    "@tombolo/shared": "workspace:*",
    "dotenv": "catalog:",
    "mysql2": "catalog:",
    "reflect-metadata": "^0.2.2",
    "sequelize": "catalog:",
    "sequelize-typescript": "^2.1.6"
  },
  "scripts": {
    "build": "tsup",
    "esm:build": "tsup",
    "typecheck": "tsc --noEmit",
    "build:check": "pnpm typecheck && pnpm build",
    "dev": "tsup --watch",
    "db:migrate": "sequelize db:migrate",
    "db:create": "sequelize db:create",
    "db:seed": "sequelize db:seed:all",
    "db:drop": "sequelize db:drop",
    "clean": "rm -rf .turbo dist",
    "clean:deps": "rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "sequelize-cli": "^6.6.3",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
